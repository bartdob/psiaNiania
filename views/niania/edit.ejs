<% include ../partials/header %>

<h1>
	Edit [<%=niania.name%>]
</h1>
<div class="container">
	<div style="width: 30%; margin: 0 auto;">
		
	<form action="/niania/<%=niania._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="niania[name]" value="<%= niania.name%>">
		</div>
		
		<div class="form-group">
			<input class="form-control" type="text" name="niania[price]" value="<%=niania.price%>" placeholder="price" min="1" step="1" max="200">
		</div>
		
		<div class="form-group">
			<input class="form-control" type="text" name="niania[image]" value="<%= niania.image%>">
		</div>
		
		<div class="form-group">
			<input class="form-control" type="text" name="niania[desc]" value="<%= niania.desc%>">
		</div>
<div>
	<button class="btn btn-primary btn-block">
		Submit
	</button>
</div>	
</form>
	</div>
	
<a href="/niania">Go Back</a>
<% include ../partials/footer %>
	
</div>