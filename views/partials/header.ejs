      <li class="nav-item">
        <a class="nav-link" href="/kontakt">Kontakt</a>
      </li>
    </ul>
		<ul class="nav navbar-nav navbar-right">
		<% if(!currentUser){ %>
			<li><a class="b-2 p-2" href="/register">SignIN</a></li>
			<li><a class="b-2 p-2" href="/login">LogIn</a></li>
			<% } else { %> 
			<li><strong style="color: yellow;">Welcome <%= currentUser.username %> !</strong> </li>
			<li><a class="b-2 p-2" href="/logout"> LogOut </a></li>
			<% } %>
		</ul>
	  </div>
  </div>
